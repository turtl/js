<div class="filter-sort">
	<ul>
		<li class="{{#equal sort 'created'}}sel{{/equal}} {{#equal dir 'desc'}}desc{{/equal}}">
			<a href="#created" rel="created">{{icon 'sort'}}Created</a>
		</li>
		<li class="{{#equal sort 'mod'}}sel{{/equal}} {{#equal dir 'desc'}}desc{{/equal}}">
			<a href="#modified" rel="mod">{{icon 'sort'}}Modified</a>
		</li>
	</ul>
</div>

<div class="filter-text">
	<form class="standard-form">
		<input type="text" name="text" value="{{text}}" placeholder="Text search">
	</form>
</div>

<div class="tag-container"></div>

